<h1>Portfolio items</h1>

<%= link_to "Create New Item", new_portfolio_url %>

<% @portfolio_items.each do |i| %>
  <p><%= link_to i.title, portfolio_path(i) %></p>
  <p><%= i.subtitle %></p>
  <p><%= i.body %></p>
  <%= image_tag i.thumb_image if !i.thumb_image.nil?%>
  <%= link_to "Edit", edit_portfolio_path(i) %>
  <%= link_to 'Delete Portfolio Item', portfolio_path(i), method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>